<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<VBox stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekstomach.cloud.client.UI.mainWindowController">
   <children>
     <HBox stylesheets="dark-theme.css" alignment="center" VBox.vgrow="ALWAYS">
        <children>
          <VBox stylesheets="dark-theme.css">
             <children>
               <TableView fx:id="localFilesTable" stylesheets="@dark-theme.css">
                 <columns>
                   <TableColumn fx:id="nameColumnClient" text="Name" />
                   <TableColumn fx:id="sizeColumnClient" text="Size" />
                 </columns>
                 <columnResizePolicy>
                   <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                 </columnResizePolicy>
               </TableView>
               <HBox stylesheets="dark-theme.css">
                 <children>
                   <Button fx:id="sendFile" maxWidth="Infinity" minWidth="-Infinity" onAction="#sendFile" text="Send" textOverrun="CLIP" HBox.hgrow="ALWAYS" />
                   <Button fx:id="deleteLocalFile" maxWidth="Infinity" onAction="#deleteLocalFile" text="Delete" HBox.hgrow="ALWAYS" />
                 </children>
               </HBox>
             </children>
          </VBox>

          <VBox>
         <children>
               <TableView fx:id="cloudFilesTable" stylesheets="@dark-theme.css">
                 <columns>
                   <TableColumn fx:id="nameColumnServer" text="Name" />
                   <TableColumn fx:id="sizeColumnServer" text="Size" />
                 </columns>
                 <columnResizePolicy>
                   <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                 </columnResizePolicy>
               </TableView>
               <HBox>
                 <children>
                   <Button fx:id="loadFile" maxWidth="Infinity" minWidth="-Infinity" onAction="#loadFile" text="Load" textOverrun="CLIP" HBox.hgrow="ALWAYS" />
                   <Button fx:id="deleteServerFile" maxWidth="Infinity" onAction="#deleteServerFile" text="Delete" HBox.hgrow="ALWAYS" />
                 </children>
               </HBox>
         </children>

          </VBox>
        </children>


     </HBox>
   </children>
</VBox>
